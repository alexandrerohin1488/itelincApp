<Page x:Class="intelincApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:intelincApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock Text="Логин:"  Margin="10,0,0,0"/>
            <TextBox x:Name="Login"  Margin="0,0,0,10"/>
            <TextBlock  Text="Пароль:" Margin="10,0,0,0"/>
            <TextBox x:Name="Password"  Margin="0,0,0,10"/>
            <Button Content="Авторизация" x:Name="btnAuth" Click="btnAuth_Click"  Margin="5"/>
            <Button Content="Назад" x:Name="btnBack" Click="btnBack_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
